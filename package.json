    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.36.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
